{
  "name": "new-start",
  "version": "1.0.0",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "build": "node build.js",
    "docs": "typedoc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && node serve.js",
    "serve": "node serve.js",
    "electron": "npm run build && electron .",
    "electron-dev": "electron .",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/svg.js": "^0.0.17",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.1",
    "http-server": "^14.1.1",
    "ts-jest": "^29.3.0",
    "typedoc": "^0.27.9",
    "typedoc-umlclass": "^0.10.1"
  },
  "dependencies": {
    "@svgdotjs/svg.draggable.js": "^3.0.6",
    "@svgdotjs/svg.js": "^3.2.4",
    "@svgdotjs/svg.panzoom.js": "^2.1.2",
    "jest": "^29.7.0",
    "sweetalert2": "^11.26.3",
    "vanilla-context-menu": "^1.6.0"
  },
  "overrides": {
    "typedoc-umlclass": {
      "peerDependencies": {
        "typedoc": "^0.24 || ^0.25 || ^0.26 || ^0.27 || ^0.28"
      }
    }
  },
  "build": {
    "appId": "com.newstart.pcbdevelopment",
    "productName": "PCB Development",
    "files": [
      "electron-main.js",
      "index.html",
      "style.css",
      "dist/**/*",
      "assets/**/*",
      "images/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
